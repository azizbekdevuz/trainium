{
  "name": "trainium",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev:socket": "pnpm --filter @apps/socket dev",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "start:web": "pnpm --filter @apps/web start",
    "start:socket": "pnpm --filter @apps/socket start",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.mjs --fix",
    "lint:apps": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "erd:generate": "node scripts/generate-erd.js"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@prisma/client": "6.14.0",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "prisma": "6.14.0",
    "prisma-erd-generator": "^2.1.0",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1"
  }
}