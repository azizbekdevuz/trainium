generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String? // For email/password authentication
  role          Role           @default(CUSTOMER)
  orders        Order[]
  carts         Cart[] // <— back-relation added
  accounts      Account[]
  sessions      Session[]
  notifications Notification[] // <— notifications relation
  favorites     Favorite[]
  productLikes  ProductLike[]
  reviews       Review[]
  reviewLikes   ReviewLike[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

model Category {
  id        String    @id @default(cuid())
  slug      String    @unique
  name      String
  order     Int       @default(0)
  active    Boolean   @default(true)
  products  Product[] // <— back-relation for implicit M2M
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([order])
  @@index([active])
}

model Product {
  id           String           @id @default(cuid())
  slug         String           @unique
  name         String
  summary      String?
  description  String?
  brand        String? // For brand-based faceted filters
  priceCents   Int
  currency     String // "KRW","USD", etc.
  images       Json
  categories   Category[] // <— implicit many-to-many (no @relation)
  variants     ProductVariant[]
  inventory    Inventory?
  cartItems    CartItem[] // <— back-relation added
  bundleItems  BundleItem[]
  favorites    Favorite[]
  productLikes ProductLike[]
  reviews      Review[]
  orderItems   OrderItem[]
  active       Boolean          @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model ProductVariant {
  id            String          @id @default(cuid())
  product       Product         @relation(fields: [productId], references: [id])
  productId     String
  name          String
  sku           String          @unique
  priceCents    Int
  active        Boolean         @default(true)
  cartItems     CartItem[] // <— back-relation added
}

model Inventory {
  id         String  @id @default(cuid())
  product    Product @relation(fields: [productId], references: [id])
  productId  String  @unique
  inStock    Int     @default(0)
  lowStockAt Int?
}

model Cart {
  id        String     @id @default(cuid())
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id         String          @id @default(cuid())
  cart       Cart            @relation(fields: [cartId], references: [id])
  cartId     String
  product    Product         @relation(fields: [productId], references: [id])
  productId  String
  variant    ProductVariant? @relation(fields: [variantId], references: [id])
  variantId  String?
  qty        Int             @default(1)
  priceCents Int
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model Order {
  id            String      @id @default(cuid())
  user          User?       @relation(fields: [userId], references: [id])
  userId        String?
  items         OrderItem[]
  status        OrderStatus @default(PENDING)
  subtotalCents Int
  discountCents Int         @default(0)
  shippingCents Int         @default(0)
  totalCents    Int
  currency      String
  paymentRef    String? // Toss/Stripe reference
  shipping      Shipping?
  payments      Payment[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id         String  @id @default(cuid())
  order      Order   @relation(fields: [orderId], references: [id])
  orderId    String
  product    Product @relation(fields: [productId], references: [id])
  productId  String
  variantId  String?
  name       String
  sku        String?
  qty        Int
  priceCents Int
}

model Shipping {
  id         String  @id @default(cuid())
  order      Order   @relation(fields: [orderId], references: [id])
  orderId    String  @unique
  fullName   String
  phone      String
  address1   String
  address2   String?
  city       String
  state      String?
  postalCode String
  country    String
  carrier    String?
  trackingNo String?
  status     String?
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLING
  SHIPPED
  DELIVERED
  CANCELED
  REFUNDED
}

// ===== Phase 1 additional tables: Discounts, Bundles, Payments =====

enum DiscountType {
  PERCENT
  AMOUNT
}

model Discount {
  id           String       @id @default(cuid())
  code         String       @unique
  description  String?
  type         DiscountType
  value        Int // percent (e.g. 10) or minor units (e.g. 1000)
  minimumCents Int? // optional threshold
  startsAt     DateTime?
  endsAt       DateTime?
  active       Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Bundle {
  id          String       @id @default(cuid())
  slug        String       @unique
  name        String
  description String?
  items       BundleItem[]
  priceCents  Int
  currency    String
  active      Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model BundleItem {
  id        String  @id @default(cuid())
  bundle    Bundle  @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  bundleId  String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  qty       Int     @default(1)
}

enum PaymentProvider {
  STRIPE
  TOSS
}

enum PaymentStatus {
  REQUIRES_ACTION
  PENDING
  SUCCEEDED
  FAILED
  CANCELED
}

model Payment {
  id          String          @id @default(cuid())
  order       Order?          @relation(fields: [orderId], references: [id])
  orderId     String?
  provider    PaymentProvider
  providerRef String? // Payment intent id / order id, etc.
  amountCents Int
  currency    String
  status      PaymentStatus   @default(PENDING)
  raw         Json?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// ===== Simple in-app CMS content for homepage =====
model HomeContent {
  id           String   @id @default("home")
  heroHeadline String?
  heroSub      String?
  badges       Json?
  promoMarquee String?
  updatedAt    DateTime @updatedAt
}

// ===== Notification System =====
model Notification {
  id        String           @id @default(cuid())
  userId    String? // null for system-wide notifications
  user      User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  data      Json? // Additional data (orderId, productId, etc.)
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([userId, read])
  @@index([createdAt])
}

enum NotificationType {
  ORDER_UPDATE
  PRODUCT_ALERT
  SYSTEM_ALERT
}

enum ReviewStatus {
  ACTIVE
  DELETED
}

// ===== Social & UGC: Favorites, Likes, Reviews =====

model Favorite {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model ProductLike {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([productId])
}

model Review {
  id            String          @id @default(cuid())
  product       Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  rating        Int
  title         String?
  body          String
  parent        Review?         @relation("ReviewToReplies", fields: [parentId], references: [id], onDelete: Cascade)
  parentId      String?
  replies       Review[]        @relation("ReviewToReplies")
  likes         ReviewLike[]
  status        ReviewStatus    @default(ACTIVE)
  editedAt      DateTime?
  editCount     Int             @default(0)
  deletedAt     DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([productId, createdAt])
  @@index([userId])
  @@index([parentId])
}

model ReviewLike {
  id        String   @id @default(cuid())
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([userId, reviewId])
  @@index([reviewId])
}

// ReviewVariant removed – reviews are per-product only

model FaqCategory {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String   // Default/fallback name
  order     Int      @default(0)
  active    Boolean  @default(true)
  faqs      Faq[]
  translations FaqCategoryTranslation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([order])
}

model FaqCategoryTranslation {
  id        String      @id @default(cuid())
  category  FaqCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
  language  String      // 'en', 'ko', 'uz'
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([categoryId, language])
  @@index([language])
}

model Faq {
  id          String      @id @default(cuid())
  category    FaqCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String
  order       Int         @default(0)
  active      Boolean     @default(true)
  translations FaqTranslation[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([categoryId, order])
  @@index([active])
}

model FaqTranslation {
  id        String   @id @default(cuid())
  faq       Faq      @relation(fields: [faqId], references: [id], onDelete: Cascade)
  faqId     String
  language  String   // 'en', 'ko', 'uz'
  question  String
  answer    String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([faqId, language])
  @@index([language])
}
